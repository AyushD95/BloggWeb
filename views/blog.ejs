<!DOCTYPE html>
<html lang="en">
<head>
   <%- include("./partials/head") %>
    <title>Home Page</title>
</head>
<body>
    
    <%- include("./partials/nav") %>
     
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" class="img-fluid" alt="Blog Image">

        <pre class="mt-4"
    style="
    white-space: pre-wrap; 
    word-wrap: break-word; 
    font-family: 'Courier New', Courier, monospace; /* Use a clean, monospace font */
    font-size: 16px; /* Adjust font size for readability */
    line-height: 1.6; /* Increase line height for better spacing */
    background-color: #f8f9fa; /* Light background for contrast */
    padding: 15px; /* Add padding to create space around the text */
    border: 1px solid #ddd; /* Light border for separation */
    border-radius: 5px; /* Smooth the edges */
    overflow: auto; /* In case of exceptionally long content, allows vertical scrolling */
">
    <%= blog.body %>
</pre>
    </div>

    <div class="container mt-4 mb-6">

     <img src="<%= blog.createdBy.profileImageURL %>" width="50px">
     <%= blog.createdBy.fullName %>
    </div>

    
    <div class="container mt-4">
        <h2>Comments (<%= comments.length %>)</h2>
    </div>
<% if (locals.user) { %>

    <div class="container mt-3">
        
    
        <form action="/blog/comment/<%= blog._id %>" method="post">
           
            <div class="mb-3 mt-4">      
            <input type="text" name="content" class="form-control" id="content" placeholder="Enter your Comments" aria-describedby="emailHelp">            
            </div>      
            <button type="submit" class="btn btn-primary">Add</button>
        
        </form>
    
    </div>
 
<% } %>


<div class="container mt-2 mb-3">
    
    <% comments.forEach(comment => { %>
        <div class="container mt-4 mb-2">
            <div class="d-flex align-items-start">
                <img src="<%= comment.createdBy.profileImageURL %>" width="30" class="mr-2"> <!-- Existing margin -->
                <div style="flex: 1; margin-left: 10px;"> <!-- Added margin-left for spacing -->
                    <strong><%= comment.createdBy.fullName %></strong>
                    <p class="comment-content"><%= comment.content %></p>
                </div>
            </div>
        </div>
    <% }) %>
</div>






  
    
            
            





    <%- include("./partials/scripts") %>
</body>
</html>